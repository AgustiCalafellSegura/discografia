{% extends "base.html.twig" %}

{% block title %}
    Nom de la cançó
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-10">
            <h1>Cançons</h1>
            <table class="table">
                <thead>
                <tr>
                        <th>id</th>
                        <th>name</th>
                        <th>duration</th>
                        <th>stars</th>
                        <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for songs in songs %}
                    <tr>
                        <td>{{ song.id }}</td>
                        <td>{{ song.name }}</td>
                        <td>{{ song.duration }}</td>
                        <td>{{ song.stars }}</td>
                        <td>
                            <a href="{{ path('app_songs_update', {id: songs.id}) }}">Actualitzar</a>
                            <a href="{{ path('app_songs_delete', {id: songs.id}) }}">Esborrar</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <hr>
            <p>
                <a href="{{ path('app_songs_create') }}">+ Crear una cançó nova</a>
            </p>

        </div>
    </div>
{% endblock %}